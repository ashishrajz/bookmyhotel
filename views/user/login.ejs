<% layout("/layouts/boilerplate") %>
<div class="col-6 offset-3">
    <h1 class="col-8 offset-3 login-title">Login to Book My Hotel</h1>
    <div>
        <form  action="/login" method="post" class="needsvalidation" novalidate>
            <div class="mb-3 input-box">
                <label for="username" class="form-label">Username</label>
                <input
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
                />
                
            </div>
            
            <div class="mb-3 input-box">
                <label for="password" class="form-label">Password</label>
                <input
                name="password"
                id="password"
                type="password"
                class="form-control"
                required
                />
                
            </div>
            <button class="btn btn-success">LogIn</button>

        </form>

    </div>


</div>
<div class="empty-box">

</div>